FROM golang:1.22-alpine AS build
WORKDIR /src
COPY go.work go.work.sum ./
COPY backend/go ./backend/go
RUN cd backend/go && go build -o /out/core ./core/cmd/core

FROM alpine:3.19
RUN addgroup -S app && adduser -S app -G app
USER app
WORKDIR /app
COPY --from=build /out/core /app/core
EXPOSE 8081
ENTRYPOINT ["/app/core"]
