FROM golang:1.22-alpine AS build
WORKDIR /src
COPY go.work go.work.sum ./
COPY backend/go ./backend/go
RUN cd backend/go && go build -o /out/api ./api/cmd/api

FROM alpine:3.19
RUN addgroup -S app && adduser -S app -G app
USER app
WORKDIR /app
COPY --from=build /out/api /app/api
EXPOSE 8080
ENTRYPOINT ["/app/api"]
